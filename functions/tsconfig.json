{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitReturns": true,
    "sourceMap": false,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
